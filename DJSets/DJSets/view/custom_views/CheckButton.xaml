<ToggleButton
    x:Class="DJSets.view.custom_views.CheckButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    extensions:CursorSpotlightExtension.BackgroundBrush="{StaticResource BackgroundColorPrimaryDarkHover}"
    extensions:RippleExtension.BackgroundBrush="Transparent"
    Background="Transparent"
    BorderThickness="0"
    mc:Ignorable="d">
    <ToggleButton.Style>
        <Style BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="ToggleButton">
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </ToggleButton.Style>
    <ToggleButton.Content>
        <svgc:SvgViewbox
            Name="ViewboxImg"
            MaxWidth="24"
            MaxHeight="24" />
    </ToggleButton.Content>
</ToggleButton>
