<Button
    x:Class="DJSets.view.custom_views.IconedButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
    Margin="0,0,0,0"
    d:DesignHeight="450"
    d:DesignWidth="800"
    extensions:CursorSpotlightExtension.BackgroundBrush="{StaticResource BackgroundColorPrimaryDarkHover}"
    extensions:RippleExtension.BackgroundBrush="{StaticResource BackgroundColorPrimaryDarkClick}"
    Background="Transparent"
    mc:Ignorable="d">
    <Button.Style>
        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Margin" Value="0" />
        </Style>
    </Button.Style>
    <Button.Content>
        <StackPanel Margin="0">
            <TextBlock
                Name="TextBlockIcon"
                Margin="0,0,0,0"
                Padding="0,0,0,0"
                FontFamily="Segoe MDL2 Assets" />
            <svg:SvgViewbox
                Name="SvgIcon"
                MaxWidth="24"
                MaxHeight="24"
                Stretch="Uniform" />
        </StackPanel>
    </Button.Content>
</Button>
